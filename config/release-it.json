{
  "hooks": {
    "before:init": ["npm run lint", "npm test", "npm run instrument"],
    "after:bump": "npm pack"
  },
  "github": {
    "release": true,
    "assets": ["*.tgz"]
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/keep-a-changelog": {
      "filename": "CHANGELOG.md",
      "addVersionUrl": true
    }
  }
}
